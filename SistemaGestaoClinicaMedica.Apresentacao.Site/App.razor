<Router AppAssembly="@typeof(Program).Assembly">
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
            <NotAuthorized>
                <h3>Você não está autorizado a acessar esta página. :(</h3>
            </NotAuthorized>
        </AuthorizeRouteView>
    </Found>
    <NotFound>
        <CascadingAuthenticationState>
            <LayoutView Layout="@typeof(MainLayout)">
                <p>Desculpe, está pagina não existe!</p>
            </LayoutView>
        </CascadingAuthenticationState>
    </NotFound>
</Router>

@using Blazored.LocalStorage;
@using SistemaGestaoClinicaMedica.Apresentacao.Site.Servicos;

@code{
    [Inject] private ILocalStorageService LocalStorageService { get; set; }
    [Inject] private ApplicationState ApplicationState { get; set; }
    [Inject] private NavigationManager NavigationManager { get; set; }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            ApplicationState.Token = await LocalStorageService.GetItemAsync<string>(LoginServico.ChaveLocalStorage);

            if (string.IsNullOrEmpty(ApplicationState.Token))
                NavigationManager.NavigateTo("login");
        }
    }
}