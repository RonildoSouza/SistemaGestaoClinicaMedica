@if (ButtonVisibled)
{
    <button class="btn @ButtonClass" onclick="$('#@Id').modal('show');">
        @ButtonText
    </button>
}

<div class="modal" id="@Id" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Body
            </div>
            <div class="modal-footer">
                @if(Footer != null)
                {
                    @Footer
                }
                else
                {
                    <button type="button" class="btn" data-dismiss="modal">Fechar</button>
                    <button type="button" class="btn @ActionButtonClass" data-dismiss="modal" @onclick="OnActionButton" disabled="@ActionButtonDisabled">@ActionButtonText</button>
                }
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public string Id { get; set; }
    [Parameter] public string Title { get; set; }
    [Parameter] public RenderFragment Body { get; set; }
    [Parameter] public RenderFragment Footer { get; set; }
    [Parameter] public string ButtonText { get; set; }
    [Parameter] public string ButtonClass { get; set; }
    [Parameter] public bool ButtonVisibled { get; set; }
    [Parameter] public string ActionButtonClass { get; set; } = "btn-danger";
    [Parameter] public string ActionButtonText { get; set; }
    [Parameter] public bool ActionButtonDisabled { get; set; }
    [Parameter] public EventCallback<MouseEventArgs> OnActionButton { get; set; }
}