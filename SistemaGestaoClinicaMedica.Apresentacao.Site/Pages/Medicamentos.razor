@page "/medicamentos"

@using SistemaGestaoClinicaMedica.Aplicacao.DTO;
@using SistemaGestaoClinicaMedica.Apresentacao.Site.Servicos;
@inherits TableBase<IMedicamentoServico, MedicamentoDTO, Guid>

<HeaderComponent Title="Medicamentos" NewRoute="medicamentos/novo" />

<TableComponent Items="dtos">
    <TableHeader>
        <th>Nome</th>
        <th>Tarja</th>
        <th>Fabricante</th>
        <th>Ações</th>
    </TableHeader>
    <RowTemplate>
        <td>@context.Nome</td>
        <td>@context.Tarja</td>
        <td>@context.FabricanteNome</td>
        <td>
            <a href="medicamentos/@context.Id" class="btn"><span class="oi oi-pencil" aria-hidden="true"></span></a>
            <DeleteDialogComponent OnDeleteCallback="@(e => Deletar(e, context.Id))" Id="@context.Id.ToString()">
                <span class="oi oi-trash text-danger" aria-hidden="true"></span>
            </DeleteDialogComponent>
        </td>
    </RowTemplate>
</TableComponent>