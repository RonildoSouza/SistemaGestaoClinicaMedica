@page "/funcionarios"

@using SistemaGestaoClinicaMedica.Aplicacao.DTO;
@using SistemaGestaoClinicaMedica.Apresentacao.Site.Servicos;
@inherits TableBase<IFuncionarioServico, FuncionarioDTO, Guid>

<HeaderComponent Title="Funcionários" NewRoute="funcionarios/novo" />

<TableComponent Items="dtos">
    <TableHeader>
        <th>Nome</th>
        <th>Cargo</th>
        <th>Telefone</th>
        <th>Ações</th>
    </TableHeader>
    <RowTemplate>
        <td>@context.Nome</td>
        <td>@context.CargoId</td>
        <td>@context.Telefone</td>
        <td>
            <a href="funcionarios/@context.Id" class="btn"><span class="oi oi-pencil" aria-hidden="true"></span></a>
            <ConfirmDialogComponent Id="@context.Id.ToString()"
                                    Message="@($"Deseja prosseguir com a exclusão do funcionário {context.Nome}?")"
                                    ActionButtonText="Excluir"
                                    OnActionButton="@(e => Deletar(e, context.Id))">
                <span class="oi oi-trash text-danger" aria-hidden="true"></span>
            </ConfirmDialogComponent>
        </td>
    </RowTemplate>
</TableComponent>